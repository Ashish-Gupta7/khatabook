<%- include("./partials/header.ejs") %>

<div class="px-12 py-6 flex flex-col items-center justify-center">
    <div class="mt-40">
        <h2 class="text-3xl text-blue-500 font-semibold">Passcode</h2>
        <form action="/hisab/view/passcode/<%= hisab._id %>" method="post" autocomplete="off" class="flex flex-col mt-1 gap-1 items-end border px-6 py-4 border-black rounded-md">
            <div class="flex flex-col gap-1">
                <label for="passcode">Enter passcode</label>
                <input class="px-4 py-2 rounded-md border border-black/50" type="text" name="passcode" placeholder="Passcode" id="passcode">
            </div>
            <div class="mt-1">
                <a href="/profile" class="px-4 py-2 bg-red-600 rounded-md text-white">Cancel</a>
                <input class="px-4 py-2 rounded-md bg-blue-500 text-white cursor-pointer" type="submit" value="Open">
            </div>
        </form>
    </div>
</div>

<%- include("./partials/footer.ejs") %>